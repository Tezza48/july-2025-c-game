{
    "configurations": [
        {
            "name": "Win32",
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "STB_DS_IMPLEMENTATION",
                "TZL_IMPLEMENTATION"
            ],
            "windowsSdkVersion": "10.0.22621.0",
            "compilerPath": "gcc.exe",
            "cStandard": "c99",
            "cppStandard": "c++11",
            "intelliSenseMode": "windows-gcc-x64",
            "compilerArgs": [
                "-Iinclude/ ",
                "src/*.c ",
                "vendor/*.c ",
                "-Wall ",
                "-O0 ",
                "-g ",
                "-lopengl32 ",
                "-lgdi32 ",
                "-o dist/game.exe"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/**",
                    "${workspaceFolder}/include/**",
                    "${workspaceFolder}/vendor/**"
                ]
            },
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/include/**",
                "${workspaceFolder}/vendor/**"
            ]
        }
    ],
    "version": 4
}
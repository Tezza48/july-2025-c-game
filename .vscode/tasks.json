{
    "tasks": [
        {
            "label": "Build Game",
            "type": "shell",
            "command": "${workspaceFolder}\\build.exe",
            "problemMatcher": [],
            "group": "build" // Add to build group
        },
        {
            "label": "Run Game",
            "type": "shell",
            "command": ".\\game.exe",
            "options": {
                "cwd": "${workspaceFolder}\\dist"
            },
            "dependsOn": [
                "Build Game"
            ],
            "problemMatcher": [],
            "group": "build" // Add to build group
        },
        {
            "label": "Build build.exe", // optional, run manually
            "type": "shell",
            "command": "gcc build.c -o build.exe -O3 -Wall",
            "problemMatcher": [],
            "group": "build" // Add to build group
        }
